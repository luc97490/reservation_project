// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Materiel {
  id              Int                     @id @default(autoincrement())
  nom             String
  disponibilite   Boolean
  specsId         Int
  specs           Specifications          @relation(fields: [specsId], references: [id])
  attributionlong AttributionPermanente[]
  attribution     AttributionPonctuelle[]
}

model Specifications {
  id        Int        @id @default(autoincrement())
  type      String
  modele    String?
  materiels Materiel[]
}

model ReservationPonctuelle {
  id          Int                     @id @default(autoincrement())
  objet       String
  lieu        String
  debut       DateTime
  fin         DateTime
  attribution AttributionPonctuelle[]
  User        User?                   @relation(fields: [userId], references: [id])
  userId      Int?
}

model AttributionPonctuelle {
  court      ReservationPonctuelle @relation(fields: [courtId], references: [id])
  courtId    Int
  materiel   Materiel              @relation(fields: [materielId], references: [id])
  materielId Int
  assignedAt DateTime              @default(now())
  rendu      Boolean

  @@id([courtId, materielId])
}

model AttributionPermanente {
  id              Int       @id @default(autoincrement())
  materielId      Int
  dateAttribution DateTime
  preparateur     String
  rendu           Boolean
  dateRendu       DateTime?
  observation     String?
  userId          Int?
  materiel        Materiel  @relation(fields: [materielId], references: [id])
  User            User?     @relation(fields: [userId], references: [id])
}

enum Role {
  SuperAdmin
  Admin
  User
}

model User {
  id                      Int                     @id @default(autoincrement())
  firstName               String
  lastName                String
  email                   String                  @unique
  role                    Role                    @default(User)
  image                   String?
  reservation             ReservationPonctuelle[]
  permanente              AttributionPermanente[]
  attributionPermanenteId Int
}
