// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Materiel {
  id              Int                     @id @default(autoincrement())
  nom             String
  disponibilite   Boolean
  specsId         Int
  specs           Specifications          @relation(fields: [specsId], references: [id])
  attributionlong AttributionPermanente[]
  attribution     AttributionPonctuelle[]
}

model Specifications {
  id        Int        @id @default(autoincrement())
  type      String
  modele    String?
  materiels Materiel[]
}

model ReservationPonctuelle {
  id          Int                     @id @default(autoincrement())
  nom         String
  prenom      String
  email       String
  objet       String
  lieu        String
  debut       DateTime
  fin         DateTime
  attribution AttributionPonctuelle[]
}

model AttributionPonctuelle {
  court      ReservationPonctuelle @relation(fields: [courtId], references: [id])
  courtId    Int
  materiel   Materiel              @relation(fields: [materielId], references: [id])
  materielId Int
  assignedAt DateTime              @default(now())
  rendu      Boolean

  @@id([courtId, materielId])
}

model AttributionPermanente {
  id              Int       @id @default(autoincrement())
  materielId      Int
  nom             String
  prenom          String
  dateAttribution DateTime
  preparateur     String
  rendu           Boolean
  dateRendu       DateTime?
  observation     String?
  recuperateur    String?
  materiel        Materiel  @relation(fields: [materielId], references: [id])
}
