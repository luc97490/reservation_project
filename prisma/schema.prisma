// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Materiel {
  id              String                  @id @default(uuid())
  nom             String
  disponibilite   Boolean                 @default(false)
  specsId         String
  specs           Specification           @relation(fields: [specsId], references: [id])
  attributionlong AttributionPermanente[]
  attribution     AttributionPonctuelle[]
}

model Specification {
  id        String     @id @default(uuid())
  type      String
  modele    String?
  materiels Materiel[]
}

model ReservationPonctuelle {
  id          String                  @id @default(uuid())
  objet       String
  lieu        String
  debut       DateTime
  fin         DateTime
  commentaire String?
  attribution AttributionPonctuelle[]
  User        User?                   @relation(fields: [userId], references: [id])
  userId      String?
}

model AttributionPonctuelle {
  court         ReservationPonctuelle @relation(fields: [courtId], references: [id])
  courtId       String
  materiel      Materiel              @relation(fields: [materielId], references: [id])
  materielId    String
  dateattribuer DateTime              @default(now())
  daterendu     DateTime?
  rendu         Boolean               @default(false)

  @@id([courtId, materielId])
}

model AttributionPermanente {
  id              String    @id @default(uuid())
  materielId      String
  dateAttribution DateTime  @default(now())
  preparateur     String
  rendu           Boolean
  dateRendu       DateTime?
  observation     String?
  userId          String?
  materiel        Materiel  @relation(fields: [materielId], references: [id])
  User            User?     @relation(fields: [userId], references: [id])
}

enum Role {
  SuperAdmin
  Admin
  User
}

model User {
  id          String                  @id
  email       String                  @unique
  role        Role                    @default(User)
  reservation ReservationPonctuelle[]
  permanente  AttributionPermanente[]
}
